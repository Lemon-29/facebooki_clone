<h1>ブログ一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>
<% @picture_blogs.each do |picture_blog| %>
  <tr>
    <td><%= picture_blog.title %></td>
    <td><%= picture_blog.content %></td>
    <td><%= link_to '詳細を確認する', picture_blog_path(picture_blog.id) %></td>
    <td><%= link_to "ブログを編集する", edit_picture_blog_path(picture_blog.id), data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to 'ブログを削除する', picture_blog_path(picture_blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
<br>
<%= link_to '新しくブログを投稿する', new_picture_blog_path %>